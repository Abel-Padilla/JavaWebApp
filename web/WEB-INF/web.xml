<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controllers.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SubirController</servlet-name>
        <servlet-class>controllers.SubirController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>controllers.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CategoriaController</servlet-name>
        <servlet-class>controllers.admin.CategoriaController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AgregarCategoriaController</servlet-name>
        <servlet-class>controllers.admin.AgregarCategoriaController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UsuarioController</servlet-name>
        <servlet-class>controllers.admin.UsuarioController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AgregarUsuarioController</servlet-name>
        <servlet-class>controllers.admin.AgregarUsuarioController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
        <url-pattern>/login/auth</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SubirController</servlet-name>
        <url-pattern>/subir</url-pattern>
        <url-pattern>/subir/imagen</url-pattern>
        <url-pattern>/listaimagenes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CategoriaController</servlet-name>
        <url-pattern>/admin/categorias</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AgregarCategoriaController</servlet-name>
        <url-pattern>/admin/categorias/agregar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UsuarioController</servlet-name>
        <url-pattern>/admin/usuarios</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AgregarUsuarioController</servlet-name>
        <url-pattern>/admin/usuarios/agregar</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
